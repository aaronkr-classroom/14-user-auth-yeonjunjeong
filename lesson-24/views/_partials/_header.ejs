<!-- views/partials/header.ejs -->

<!-- HEADER -->
<header class="header">
  <div class="container">
    <div
      class="d-flex flex-wrap py-3 align-items-center justify-content-center justify-content-md-between"
    >
      <!-- 로고 -->
      <%- include('_logo.ejs') %>

      <!-- 메뉴 -->
      <%- include('_navigation.ejs') %>

      <div class="user-info col-md-3 text-end">
        <% if (loggedIn) { %>
          <span>Logged in as</span>
          <a class="btn btn-outline-secondary"
            href="<%= `/users/${currentUser._id}` %>"
            ><%= currentUser.username %></a>
        <% } else { %>
          <a class="btn btn-outline-secondary"
            href="/users/login">Login</a>
          <a class="btn ut-red" href="/users/new">Resister</a>
        <% } %>
      </div>
    </div>
  </div>
</header>